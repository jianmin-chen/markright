<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>markright</title>
        <link rel="stylesheet" href="/styles/base.css" />
        <link rel="stylesheet" href="/styles/hljs.css" />
        <link rel="stylesheet" href="/styles/app.css" />
        <link rel="stylesheet" href="/styles/editor.css" />
        <script src="/scripts/hljs.js"></script>
        <script src="/scripts/split.js"></script>
        <script src="/scripts/utils.js"></script>
        <script src="/scripts/parser.js"></script>
    </head>
    <body>
        <div class="contextmenu" id="folder-contextmenu">
            <div class="item" id="new-file">New file</div>
            <div class="item" id="rename-folder">Rename</div>
            <div class="item" id="delete-folder">
                <span style="color: red">Delete</span>
            </div>
        </div>
        <div class="contextmenu" id="file-contextmenu">
            <div class="item" id="rename-file">Rename</div>
            <div class="item" id="download-markdown">Download Markdown</div>
            <div class="item" id="download-html">Download HTML</div>
            <div class="item" id="delete-file">
                <span style="color: red">Delete</span>
            </div>
        </div>
        <div id="wrapper">
            <div id="menu">
                <div id="mobile-menu">
                    <button id="open-menu">&equiv;</button>
                </div>
                <div id="menu-wrapper">
                    <div>
                        <form action="/logout" id="logout" method="GET">
                            <button class="menu-button">Log out &rarr;</button>
                        </form>
                        <ul id="tree"></ul>
                    </div>
                    <button class="menu-button" id="new">
                        &plus; New folder
                    </button>
                </div>
            </div>
            <div id="mobile-tabs">
                <button id="open-input">Write</button>
                <button id="open-output">Read</button>
            </div>
            <textarea id="input"></textarea>
            <div id="output"></div>
        </div>
        <script src="/scripts/app.js"></script>
    </body>
</html>
